---
import type classNames from "classnames";
import { stringFromDate } from "../scripts/components/TimeCounter";

export interface Props {
	date: Date | number;
	futureText?: string;
	pastText?: string;
	style?: string;
	"class:list"?: classNames.Argument;
}
const { date, style, futureText, pastText } = Astro.props;
---

<script src="../scripts/components/TimeCounter.ts"></script>
<time-counter
	style={style}
	class:list={[Astro.props["class:list"]]}
	data-date={+new Date(date)}
	data-future-text={futureText}
	data-past-text={pastText}
>
	{stringFromDate(new Date(date), futureText, pastText)}&nbsp;
</time-counter>
